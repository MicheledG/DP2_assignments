<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	
	<xsd:element name="nffgInfoWrapper">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="catalog" type="catalogType">
					<xsd:key name="keyCatalogNetworkFunctionality">
					<!-- Ensure uniqueness of network functionalities within the catalog and their referenceability-->
					<xsd:selector xpath="networkFunctionality"/>
					<xsd:field xpath="."/>
				</xsd:key>
				</xsd:element>
				<xsd:element name="nffgInfos">
					<xsd:complexType>
						<xsd:sequence>
							<xsd:element name="nffgInfo" type="nffgInfoType" maxOccurs="unbounded"/>
						</xsd:sequence>
					</xsd:complexType>
				</xsd:element>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	
	<xsd:complexType name="catalogType">
		<xsd:sequence>
			<xsd:element name="networkFunctionality" type="xsd:string" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="nffgInfoType">
		<xsd:sequence>
			<xsd:element name="nffg" type="nffgType">
				<xsd:key name="keyNffgNodeName">
					<!-- Ensure uniqueness of nodes' name within the same nffg and their referenceabilty-->
					<xsd:selector xpath="nodes/node"/>
					<xsd:field xpath="@name"/>
				</xsd:key>
				<xsd:key name="keyNffgLinkName">
					<!-- Ensure uniqueness of links' name within the same nffg and their referenceabilty-->
					<xsd:selector xpath="links/link"/>
					<xsd:field xpath="@name"/>
				</xsd:key>
				<xsd:keyref name="keyrefNffgSourceNodeName" refer="keyNffgNodeName">
					<!-- reference unique source nodes' name within the same nffg -->
					<xsd:selector xpath="links/link/sourceNode"/>
					<xsd:field xpath="."/>
				</xsd:keyref>
				<xsd:keyref name="keyrefNffgDestinationNodeName" refer="keyNffgNodeName">
					<!-- reference unique destination nodes' name within the same nffg -->
					<xsd:selector xpath="links/link/destinationNode"/>
					<xsd:field xpath="."/>
				</xsd:keyref>
				<xsd:keyref name="keyrefNffgLinkName" refer="keyNffgLinkName">
					<!-- reference unique links' name within the same nffg -->
					<xsd:selector xpath="nodes/node/link"/>
					<xsd:field xpath="."/>
				</xsd:keyref>
			</xsd:element>
			<xsd:element name="policies">
				<xsd:complexType>
					<xsd:sequence>
						<xsd:element name="policy" type="policyType" maxOccurs="unbounded"/>
					</xsd:sequence>
				</xsd:complexType>
			</xsd:element>
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="nffgType">
		<xsd:sequence>
			<xsd:element name="nodes">
				<xsd:complexType>
					<xsd:sequence>
						<xsd:element name="node" type="nodeType" maxOccurs="unbounded"/>
					</xsd:sequence>
				</xsd:complexType>
			</xsd:element>
			<xsd:element name="links">
				<xsd:complexType>
					<xsd:sequence>
						<xsd:element name="link" type="linkType" maxOccurs="unbounded"/>
					</xsd:sequence>
				</xsd:complexType>
			</xsd:element> 
			<xsd:element name="lastUpdate" type="dateType"/>
		</xsd:sequence>
		<xsd:attribute name="name" type="xsd:string"/>
	</xsd:complexType>
	
	<xsd:complexType name="nodeType">
		<xsd:sequence>
			<xsd:element name="networkFunctionality" type="xsd:string"/>
			<xsd:element name="link" type="xsd:string" maxOccurs="unbounded"/>
		</xsd:sequence>
		<xsd:attribute name="name" type="xsd:string"/>
	</xsd:complexType>
	
	<xsd:complexType name="linkType">
		<xsd:sequence>
			<xsd:element name="sourceNode" type="xsd:string"/>
			<xsd:element name="destinationNode" type="xsd:string"/>
		</xsd:sequence>
		<xsd:attribute name="name" type="xsd:string"/>
	</xsd:complexType>
	
	<xsd:complexType name="policyType">
		<xsd:sequence>
			<xsd:element name="property" type="xsd:string"/>
			<xsd:element name="positive" type="xsd:string"/>
			<xsd:element name="networkFunctionality" type="xsd:string" minOccurs="0" maxOccurs="unbounded"/>
			<xsd:element name="nffg" type="xsd:string"/>
			<xsd:element name="sourceNode" type="xsd:string"/>
			<xsd:element name="destinationNode" type="xsd:string"/>
			<xsd:element name="result" type="xsd:string"/>
			<xsd:element name="lastVerification" type="dateType"/>
		</xsd:sequence>
		<xsd:attribute name="name" type="xsd:string"/>
	</xsd:complexType>
		
	<xsd:complexType name="dateType">
		<xsd:sequence>
			<xsd:element name="year" type="xsd:integer"/>
			<xsd:element name="month" type="xsd:integer"/>
			<xsd:element name="day" type="xsd:integer"/>
			<xsd:element name="hour" type="xsd:integer"/>
			<xsd:element name="min" type="xsd:integer"/>
			<xsd:element name="sec" type="xsd:integer"/>
			<xsd:element name="utcZone" type="xsd:string"/>
		</xsd:sequence>
	</xsd:complexType>
	
</xsd:schema>